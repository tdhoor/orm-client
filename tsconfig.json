{
   "compilerOptions": {
      "outDir": "./build",
      "baseUrl": ".",
      "target": "ESNext",
      "module": "CommonJS",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "paths": {
         "@core/*": [
            "libs/core/src/*"
         ]
      },
      "lib": [
         "dom"
      ],
   },
   "include": [
      "src",
      "libs"
   ],
   "exclude": [
      "node_modules"
   ],
   "ts-node": {
      "require": ["tsconfig-paths/register"],
      "esm": true
    }
}